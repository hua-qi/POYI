.topicList {
  box-sizing: border-box;
  width: 90%;
  height: 120rpx;
  background-color: #fff;
  margin-top: 30rpx;
  padding: 0 30rpx;
  border-radius: 30rpx;
  box-shadow: 0 0 10px 2px #bdcee0;
  display: flex;
  justify-content: space-between;
}
.title {
  color: #1d91f6;
  line-height: 120rpx;
}
.leftPopup {
  height: 90%;
}
.broadside {
  margin: 100rpx 20rpx;
}
.broadside view {
  padding: 10rpx;
  background-color: #1d91f6;
  color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}
