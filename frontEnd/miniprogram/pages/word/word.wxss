page {
  width: 100%;
  height: 100%;
}

.container {
  box-sizing: border-box;
  width: 80%;
  height: 96%;
  padding: 60rpx 20rpx 20rpx;
  background-color: #f6f6f6;
  border-radius: 30rpx;
  box-shadow: 0 0 10px 2px #bdcee0;
 
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.circle {
  font-size: x-large;
  border-radius: 10%;
  box-shadow: 0 0 10px 2px #bdcee0;
}

.words {
  width: 90%;
  height: 36%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-content: space-between;
}
.words view {
  box-shadow: 0 0 10px 2px #bdcee0;
}

.mean {
  box-sizing: border-box;
  width: 48%;
  height: 200rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
}

.right {
  color: #ffffff;
  font-weight: 900;
  background-color: #1c8ff9;
}

.wrong {
  color: #ffffff;
  font-weight: 900;
  background-color: #e2394a;
}

.button {
  box-sizing: border-box;
  width: 90%;
  height: 80rpx;
  background-image: linear-gradient(to right, #ffffff, #1d91f6, #ffffff );
  font-size: larger;
  color: #fff;
  line-height: 80rpx;
  text-align: center;
  border-radius: 20rpx;
  box-shadow: 0 0 10px 2px #bdcee0;
}